{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts"  // Adicione essa linha para incluir as definições de tipo
  ],
  "exclude": ["node_modules"]
}
